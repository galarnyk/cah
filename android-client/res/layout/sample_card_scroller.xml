<?xml version="1.0" encoding="utf-8"?>
<com.cah.customviews.CardScrollerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.cah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cah.customviews.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@drawable/card_background_white"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:exampleDimension="24sp"
        app:exampleString="This is a sample card. Please ignore this text." />

    <com.cah.customviews.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@drawable/card_background_white"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:exampleDimension="24sp"
        app:exampleString="Test, Test, Test, Test, Test, Test, Test, Test, Test!" />
    <com.cah.customviews.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@drawable/card_background_white"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:exampleDimension="24sp"
        app:exampleString="This card should hang off the right side of the screen!" />

</com.cah.customviews.CardScrollerLayout>